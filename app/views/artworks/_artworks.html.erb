<ul>
<% artwork_category = ' '%>
<% artworks.sort_by {|a| a.category }.each do |artwork| %>
    <% if artwork.category != artwork_category %>
        <h2><%= artwork.category%></h2>
        <% artwork_category = artwork.category %>
    <% end %>
    <li><%= link_to highlight(artwork.friendly_html_description, params[:q]), artwork %></li>
<% end %>
</ul>